{
  "name": "dash",
  "displayName": "dash",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:dash.helloWorld",
    "onCommand:dash.createGroup",
    "onWebviewPanel:dash.dashboard"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dashboard",
          "title": "Dashboard",
          "icon": "assets/dash.svg"
        }
      ]
    },
    "views": {
      "dashboard": [
        {
          "type": "webview",
          "id": "dash.dashboard",
          "name": "Project Dashboard",
          "icon": "media/icon.svg",
          "visibility": "visible",
          "contextualTitle": "Project Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "dash.openDashboard",
        "title": "Dash: Open Dashboard"
      },
      {
        "command": "dash.createGroup",
        "title": "Dash: Create Group"
      },
      {
        "command": "dash.updateGroup",
        "title": "Dash: Update Group"
      },
      {
        "command": "dash.deleteGroup",
        "title": "Dash: Delete Group"
      },
      {
        "command": "dash.createProject",
        "title": "Dash: Create Project"
      },
      {
        "command": "dash.updateProject",
        "title": "Dash: Update Project"
      },
      {
        "command": "dash.deleteProject",
        "title": "Dash: Delete Project"
      }
    ],
    "configuration": [
      {
        "id": "dash",
        "title": "Dash",
        "order": 1,
        "properties": {
          "dash.groups": {
            "type": "object"
          },
          "dash.projects": {
            "type": "object"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "yarn compile-tests && mocha ./out/**/*.spec.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "ts-loader": "^9.2.5",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "@vscode/test-electron": "^1.6.2"
  }
}
