    "dist": true, // set this to true to hide the "dist" folder with the compiled JS files
    ".husky": true,
    "node_modules": true,
    ".eslintcache": true,
    ".yarn*": true,
    "yarn*": true,
    "vendor": true
  },
  "search.exclude": {
